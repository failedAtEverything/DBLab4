@using WebApp.Models;

@{
    var model = Model;
}

<div style="height:70vh; width:100%; overflow-y: scroll">
    <table border="1" style="width: 100%">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Length</th>
            <th>Rating</th>
            <th>Genre</th>
            <th>Description</th>
        </tr>
        @foreach (var item in model) {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Length</td>
                <td>@item.Rating</td>
                <td>@item.Genre</td>
                <td>@item.Description</td>
            </tr>
        }
    </table>
</div>
